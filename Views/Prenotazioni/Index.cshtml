
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Prenotazione ID</th>
            <th>Data Prenotazione</th>
            <th style="width: 15%;">Data Arrivo</th>
            <th>Data Partenza</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Numero Camera</th>
            <th>Tipo Pensione</th>
            <th>Dettaglio</th>
            <th>Aggiungi Servizi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prenotazione in Model)
        {
            <tr>
                <td>@prenotazione.Prenotazione_ID</td>
                <td>@prenotazione.Data_Pren.ToString("yyyy-MM-dd")</td>
                <td>@prenotazione.Data_Arrivo.ToString("yyyy-MM-dd")</td>
                <td>@prenotazione.Data_Partenza.ToString("yyyy-MM-dd")</td>
                <td>@prenotazione.Ospite.Nome</td>
                <td>@prenotazione.Ospite.Cognome</td>
                <td>@prenotazione.Camera.Numero</td>
                <td>@prenotazione.Pensione.Tipo</td>
                <td class="text-center">
                    <a href="@Url.Action("Details", "Prenotazioni", new { id = prenotazione.Prenotazione_ID })" class="btn btn-sm btn-success">Dettaglio</a>
                </td>
                <td class="text-center">
                    <a href="@Url.Action("AddServizi", "Prenotazioni", new { id = prenotazione.Prenotazione_ID })" class="btn btn-sm btn-info">Aggiungi servizi</a>
                </td>
            </tr>
        }
    </tbody>
</table>